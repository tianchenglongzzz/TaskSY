<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWindow"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MsgActivity">
    <include
        layout="@layout/action_bar_layout"
        ></include>
    <RelativeLayout

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sp_ed_search"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <EditText
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/ed_search"
            android:hint="请输入您想搜索的内容"
            android:background="@null"
            android:layout_toRightOf="@id/img_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>
        <ImageView
            android:id="@+id/img_a"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/search"
            android:layout_width="18dp"
            android:layout_height="18dp"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_b"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/tongzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>

        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:gravity="center"
            android:text="3"
            android:layout_marginTop="3dp"
            android:layout_marginStart="48dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="-7dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/sp_cirle"></TextView>

        <TextView
            android:id="@+id/tv_a"
            android:layout_marginTop="10dp"
            android:text="系统消息"
            android:layout_toRightOf="@id/img_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
     <TextView
         android:text="我是系统消息"
         android:id="@+id/tv_sytem_msg"
         android:layout_marginTop="10dp"
         android:layout_toRightOf="@id/img_b"
         android:layout_below="@id/tv_a"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_margin="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:text="下午13:24:02"
            android:id="@+id/tv_sytem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_c"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/bz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <TextView
            android:id="@+id/tv_b"
            android:layout_marginTop="10dp"
            android:text="帮助中心"
            android:layout_toRightOf="@id/img_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:text="我是系统消息"
            android:id="@+id/tv_bz_msg"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_c"
            android:layout_below="@id/tv_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_margin="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:text=""
            android:id="@+id/tv_bz_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_d"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/xtgg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>

        <TextView
            android:id="@+id/tv_"
            android:layout_marginTop="10dp"
            android:text="系统公告"
            android:layout_toRightOf="@id/img_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:text="我是系统消息"
            android:id="@+id/tv_stgg_msg"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_d"
            android:layout_below="@id/tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_margin="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:text=""
            android:id="@+id/tv_stgg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>
</LinearLayout>
