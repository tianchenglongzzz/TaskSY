<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TaskManageActivity">
    <include
        layout="@layout/action_bar_layout"
        ></include>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:id="@+id/lay_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"></ImageView>
        <TextView
            android:text="selener"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_header"
            tools:ignore="MissingConstraints"></TextView>
        <TextView
            android:id="@+id/tv_state"
            android:textColor="@color/colorRed"
            android:layout_marginTop="@dimen/dp_20"
            android:text="未开通超级商人"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toRightOf="@id/img_header"
            android:background="@drawable/login_ed_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tv_id"
            android:text="ID:U65874"
            app:layout_constraintTop_toBottomOf="@id/img_header"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"></TextView>

        <TextView
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_num"
            android:textColor="@color/colorTextGray"
            android:text="刷新道具 0个"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="@color/colorRed"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="购买"
            app:layout_constraintTop_toBottomOf="@+id/tv_id"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintLeft_toRightOf="@id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_margin="20dp"
            android:text="+ 发布任务"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_fab"
            android:textColor="@color/colorTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"></TextView>
        <TextView
            android:text="余额"
            android:layout_margin="20dp"
             app:layout_constraintTop_toBottomOf="@id/tv_fab"
            app:layout_constraintRight_toLeftOf="@id/tv_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="@color/colorRed"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="￥666"
            app:layout_constraintTop_toBottomOf="@id/tv_fab"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            app:layout_constraintRight_toLeftOf="@id/tv_tixian"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
        android:background="@drawable/sp_btn_kelingqu"
        android:text="充值"
            app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorWhite"
            android:layout_marginBottom="10dp"
        android:id="@+id/tv_congzhi"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
        <TextView
            app:layout_constraintRight_toLeftOf="@id/tv_zhuanhuan"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/sp_btn_kelingqu"
            android:text="提现"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_tixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
             app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/sp_btn_kelingqu"
            android:text="转换"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_zhuanhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xtab"
        android:background="@color/colorWhite"
        app:xTabIndicatorColor="@color/colorOrange2"
        app:xTabTextSelectedBold="true"
        app:xTabTextColor="@color/colorTextGray"
        app:xTabDisplayNum="3"
        app:xTabIndicatorWidth="30dp"
        app:xTabSelectedTextColor="@color/colorOrange2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.androidkun.xtablayout.XTabLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
</LinearLayout>