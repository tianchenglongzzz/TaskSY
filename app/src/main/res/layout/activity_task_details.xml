<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWindow"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TaskDetailsActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/action_bar_layout"
            ></include>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/img_header"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:ignore="MissingConstraints"></ImageView>
            <TextView
                android:text="selener"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/img_header"
                tools:ignore="MissingConstraints"></TextView>
            <TextView
                android:textColor="@color/colorRed"
                android:layout_marginTop="10dp"
                android:text="喵达人"
                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintLeft_toRightOf="@id/img_header"
                android:background="@drawable/login_ed_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
              <ImageView
                  android:layout_marginTop="@dimen/dp_30"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  android:src="@mipmap/liaotian"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"></ImageView>
                <TextView
                    android:id="@+id/v_1"
                    android:layout_marginTop="@dimen/dp_20"
                    app:layout_constraintTop_toBottomOf="@+id/img_header"
                    android:background="@color/colorHintGray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></TextView>
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColorHint="@color/colorTextBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_1"
                android:text="以太森林简单"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></TextView>
            <Button
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/color_white"
                android:text="普:+1.04"
                android:background="@color/colorOrange2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"></Button>
            <TextView
                android:textColor="@color/colorRed"
                android:text="剩余名额"
                android:id="@+id/tv_num"
                android:layout_marginTop="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginBottom="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/tv_num"
                android:text="编号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"></TextView>
            <TextView
                android:layout_marginBottom="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/tv_num"
                android:text="5412人已赚到赏金"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginBottom="@dimen/dp_10"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/tv_num"
                android:text="24小时到账"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:paddingTop="@dimen/dp_0_5"
          android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="步骤阅览"
            android:textColor="@color/colorTextBlack"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_white"
            android:text="领取任务"
            android:background="@drawable/sp_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>